#Exercicio 04
class ContaBancaria:
    def __init__(self, saldo_inicial=0):
        self._saldo = saldo_inicial  

    def depositar(self, valor):
        if valor > 0:
            self._saldo += valor
            print(f"{valor} depositado.")
        else:
            print("nao eh possivel realizar o deposito.")

    def sacar(self, valor):
        if valor > self._saldo:
            print("nao tem esse dinheiro.")
        elif valor > 0:
            self._saldo -= valor
            print(f"saque de {valor} realizado .")
        else:
            print("nao tem como sacar.")

    def mostrar_saldo(self):
        return f"Saldo atual: R${self._saldo}"


#valor inicial da conta
conta = ContaBancaria(5)
#valor depositado
conta.depositar(15)
print(conta.mostrar_saldo())
#Valor para saque
conta.sacar(5)
print(conta.mostrar_saldo())
#saque da valor
conta.sacar(100) 

#Exercicio 05

class Alunos():
    def __init__ (self, nome, nota):
        self.__nome = nome
        self.__nota = nota
    
    def get_nome(self):
        return self.__nome
    
    def set_nome(self, nome):
        if isinstance (nome, str) and len (nome)>0:
            self.__nome = nome
        else:
            print('não tem nome aqui')

    def get_nota(self):
                return self.__nota
    def set_nota(self, nota):
        if isinstance (nota, int) and len (nota)>0:
            self.__nota = nota
        else:
            print('Nota invalida!')

aluno1 = Alunos('felipe', 14)

(aluno1.set_nome('Ricardo'))
print(aluno1.get_nome())
print(aluno1.get_nota())

#Exercicios 06

class Produto:
    def __init__(self, preco):
        self.__preco= None
        if preco >0:
            self.set_preco  (preco)
        else:
            print("o valor deve ser positivo")

    def get_preco(self):
        return self.__preco
    
    def set_preco(self, preco):
        if preco >0:
            self.__preco = preco
        else:
            print('o valor deve ser positivo2')
      

preco = float(input("digite o valor do produto"))
produto1 = Produto (preco)
if produto1.get_preco() is not None:

    print(produto1.get_preco())



    
