#criar computador com atributo memoria_ram que so aceita valores maiores que 0
class Computador():
    def __init__(self,memoria_ram):
        self.__memoria_ram =memoria_ram

    def get_memoria_ram (self):
        return self.__memoria_ram
    

    def set_memoria_ram(self, memoria_ram):
        if (memoria_ram >0):
          self.__memoria_ram =memoria_ram

        else:
            print('Valor invalido o valor desse ser maior que 0')
    
memoria_ram = (int(input("digite o valor da memoria ram:")))
computador1 = Computador(memoria_ram)

###Mostrar essa parte para o Igor

if computador1.get_memoria_ram() is not None and computador1.get_memoria_ram() >0:
    print(f'O valor da memoria e {computador1.get_memoria_ram()}GB')
else:
    print("Valor inválido \n A memoria não foi configurada corretamente")





